{
  "manifest_version": 2,

  "name": "Tower.im Tips",
  "description": "Tower.im 基于 Chrome 扩展开发的第三方开发通知工具",
  "version": "1.4.2",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "notifications",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}
